pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Eb1n-Babu/jenkins.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'python -m unittest palindrome_test.py'
            }
        }

        stage('Notify') {
            steps {
                echo 'Tests completed. Ready for deployment.'
            }
        }
    }
}